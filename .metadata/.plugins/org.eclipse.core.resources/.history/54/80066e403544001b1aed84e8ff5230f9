package task1;

public class MergeAndSort 
{
	static int[] arr1 = {0,2,7,3,6,9,5};
	static int[] arr2 = {8,1,4,0};
	
	static int index1 = 0;
	static int count1 = 0;
	static int count2 = 0;
	
	static int min = Integer.MAX_VALUE;
	
	public static void main(String[] args) 
	{
		travellAll(0);
	}


	private static void travellAll(int i)
	{
		travellArr1(count1);
		
		travellArr2(count2);
		System.out.println("min => "+min);
	}


	private static void travellArr1(int count1) 
	{
		if (count1<arr1.length)
		{
			if (min>arr1[count1])
			{
				min = arr1[count1];
			}
			travellArr1(++count1);
		}
	}
	
	private static void travellArr2(int count2) 
	{
		if (count2<arr2.length)
		{
			if (min>arr2[count2])
			{
				min = arr2[count2];
			}
			travellArr2(++count2);
		}
	}
}
