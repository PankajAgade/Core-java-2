package task1;

import java.util.Scanner;

public class CountingVally 
{
	public static void main(String[] args) 
	{
		Scanner kb = new Scanner(System.in);
        
        int n = kb.nextInt();
        String path = kb.next();
        
        int sum = 0;
        for(int i=0 ; i<n ;i++)
        {
            if(path.charAt(i)=='U')
            {
                sum++;
            }
            if(path.charAt(i)=='D')
            {
                sum--;
            }
        }
        System.out.println(sum);
            
	}
}
