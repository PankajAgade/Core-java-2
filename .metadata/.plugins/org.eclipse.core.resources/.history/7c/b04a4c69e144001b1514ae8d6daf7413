package task1;

import java.util.Scanner;

public class Re 
{
	public static void main(String[] args) 
	{
		Scanner kb = new Scanner(System.in);
        int size = kb.nextInt(); 
        System.out.println(size);
        String[] arr = new String[size];
        
        for(int i=0 ; i<arr.length ; i++)
        {
        	System.out.print(":");
            kb.next();
        }
        for(String s: arr)
        {
            System.out.println(s);
        }
	}	
}
