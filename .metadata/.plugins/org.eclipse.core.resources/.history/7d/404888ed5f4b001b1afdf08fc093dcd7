package array;

public class CGI_pttern 
{
	public static void main(String[] args) 
	{
		int n = 4;
		int s = 1;
		
		for (int i = 1; i <= n; i++) 
		{
			for (int j = 1; j <= n*2; j++) 
			{
				if (i+j<8 && i-j<=0)  //j<=n   
				{
					System.out.print(j);
					if (j>0 && j<(n*2))
					{
						System.out.print("*");
					}
				}
				else
				{
					if (j<n)
					{
						System.out.print("--");
					}
				}
			}
			System.out.println();
		}
		
		
	}
}
