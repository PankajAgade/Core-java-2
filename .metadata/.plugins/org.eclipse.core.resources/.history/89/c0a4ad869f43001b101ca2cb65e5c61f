package task1;

public class E12Elements 
{
	public static void main(String[] args) 
	{
		int[] arr = {5,6,3,12,1,2,8,9,10,4,11,7};
		
		for (int i : arr) 
		{
			System.out.print(i+" ");
		}
		System.out.println();
		
		for (int i = 0; i < 4; i++)//(arr.length/3)/2
		{
			if (i==0)
			{
				int start = 0;
				int startend = start+3;
				int ends = arr.length-3;
				int endsend=ends+3;
				int minv = Integer.MAX_VALUE;
				int index =0;
				
				int insertin = 0;
				for (int k = start; k < startend; k++) 
				{
					if (minv>arr[k])
					{
						minv=arr[k];
						index=k;
					}
					for (int k1 = ends; k1 < endsend; k1++) 
					{
						if (minv>arr[k1])
						{
							minv=arr[k1];
							index=k1;
						}
					}
					if (insertin < start+3) 
					{
						int temp = arr[insertin];
						arr[insertin++]=arr[index];
						arr[index]=temp;
						start++;
						
					}
				}
				
				
			}
		}
		
		for (int i : arr) 
		{
			System.out.print(i+" ");
		}
		System.out.println();
	}
}
