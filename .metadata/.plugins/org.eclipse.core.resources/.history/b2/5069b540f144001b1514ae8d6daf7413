package task1;

public class Re 
{
	static int i = 1;
	static int j = 1;
	static int imax = 5;
	static int jmax = 5;
	
	public static void main(String[] args) 
	{
		print(j);
	}

	private static void print(int j2)
	{
		if (i<=imax && j<=jmax && j2<=jmax)
		{
			if(i-j>=0)
				System.out.print("*");
			
			if (j2==jmax)
			{
				i++;
				j2=0;
				System.out.println();
			}
			print(++j2);
		}
	}

	
}
