package task1;

import java.util.Arrays;

public class Check 
{
	
	    public void pairedElements(int arr[], int sum)
	    {
	        int low = 0;
	        int high = arr.length - 1;

	        while (low sum) {
	                high--;
	            }
	            else {
	                low++;
	            }
	        }
	    }

	    public static void main(String[] args)
	    {
	        int arr[] = { 2, 3, 4, -2, 6, 8, 9, 11 };
	        Arrays.sort(arr);

	        Check sp = new Check();
	        sp.pairedElements(arr, 6);
	    }
	}
}
